<form class="{{cssClass}}" autocomplete="off">
    {{#if (isOnyriaTypeSetting "onyria")}}
    <div class="wrap onyria-bg-std">
    {{/if}}
    {{#if (isOnyriaTypeSetting "stars")}}
    <div class="wrap onyria-bg-stars">
    {{/if}}
    {{#if (isOnyriaTypeSetting "contemporain")}}
    <div class="wrap onyria-bg-modern">
    {{/if}}   

        <div class="header">
            <div class="flexrow no-wrap">
                <div class="flex1 left" id="banner-left"></div>
                    {{#if (isOnyriaTypeSetting "onyria")}}
                    <div class="flex1 center" id="logo-banner"><img src="/systems/onyria/ui/couronne.png"/></div>
                    {{/if}}
                    {{#if (isOnyriaTypeSetting "stars")}}
                    <div class="flex1 center" id="logo-stars"><img src="/systems/onyria/ui/STARS.webp"/></div>
                    {{/if}}
                    {{#if (isOnyriaTypeSetting "contemporain")}}
                    <div class="flex1 center" id="logo-modern"><img src="/systems/onyria/ui/contemporain.webp"/></div>
                    {{/if}}                   
                <div class="flex1 right" id="banner-right"></div>
            </div>
        </div>
        
{{> "systems/onyria/templates/actors/character/parts/character-header.hbs"}}

    {{#if (isOnyriaTypeSetting "onyria")}}
    <div class="flexrow main mainHeight_std" style="overflow: visible;">
    {{/if}}
    {{#if (isOnyriaTypeSetting "stars")}}
    <div class="flexrow main mainHeight_stars" style="overflow: visible;">
    {{/if}}
    {{#if (isOnyriaTypeSetting "contemporain")}}
    <div class="flexrow main mainHeight_modern" style="overflow: visible;">
    {{/if}}  
            <div class="content flex3">
                {{!-- Sheet Tab Navigation --}}
                <nav class="sheet-tabs tabs" data-group="primary">
                    <a class="item titleFont" data-tab="stats">{{ localize "ONYRIA.tabs.stats" }}</a>
                    <a class="item titleFont" data-tab="competences">{{ localize "ONYRIA.tabs.competences" }}</a>
                    <a class="item titleFont" data-tab="inventory">{{ localize "ONYRIA.tabs.inventory" }}</a>
                </nav>
                {{!-- Sheet Body --}}
                <section class="sheet-body" style="overflow: visible;">
                    {{!-- Stats Tab --}}
                    <div class="tab stats" data-group="primary" data-tab="stats">
                        {{> "systems/onyria/templates/actors/character/parts/stats/character-stats.hbs"}}
                    </div>
                    {{!-- Competences Tab --}}
                    <div class="tab competences" data-group="primary" data-tab="competences">
                        {{> "systems/onyria/templates/actors/character/parts/competences/character-competences.hbs"}}
                    </div>
                    {{!-- Inventory Tab --}}
                    <div class="tab inventory" data-group="primary" data-tab="inventory">
                        {{> "systems/onyria/templates/actors/character/parts/inventory/character-inventory.hbs"}}
                    </div>
                </section>
            </div>
        </div>

        {{#if (isOnyriaTypeSetting "onyria")}}
        <div class="header">
            <div class="flexrow no-wrap">
                <div class="flex1 left" id="banner-bot-left"></div>
                 <div class="flex1 center" id="logo-orbe"><img src="/systems/onyria/ui/orbe.png"/></div>
                <div class="flex1 right" id="banner-bot-right"></div>
            </div>
        </div>
        {{/if}}
    </div>
</form>

