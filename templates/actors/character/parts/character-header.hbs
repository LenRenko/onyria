<div class="flexrow top">

    <div class="flexcol">
         <div class="flex1 center">
                <span class="titleFont titre-general field-label">{{ localize 'ONYRIA.ui.adventurer' }}</span>
         </div>
        <!-- NAME -->
        <div class="flexrow">
            <div class="flex4 center cell">
                <input class="field-value charname" name="name" type="text" value="{{actor.name}}" placeholder="Name" data-dtype="String"/>
            </div>
        </div>

    {{#if (and (or (isOnyriaTypeSetting "onyria") (isOnyriaTypeSetting "stars")) (isEnabled "showGenialMais"))}}
            <!-- /NAME -->
        <div class="flex1 center">
            <span class="field-label"><br>JE SUIS GENIAL.E<br> PARCE QUE ...</span>
        </div>  
        <div class="flex1 center">
                <input class="field-value" name="system.genial" type="text" value="{{system.genial}}" placeholder="..." data-dtype="String"/>
        </div>
    {{/if}}
    </div>

    {{#if (isOnyriaTypeSetting "onyria")}}
        <div class="flexcol"id="logo-sceptre">
            <img class="img" src="/systems/onyria/ui/sceptre.png"/>
        </div>
    {{/if}}

    <div class="flexcol">
         <div class="flex1 center">
                <span class="titleFont titre-general field-label">{{ localize 'ONYRIA.ui.liveordie' }}</span>
         </div>
         <!-- PROFESSION -->
        <div class="flexrow">
            {{#if (isOnyriaTypeSetting "onyria")}}
                <div class="flex4 center cell drop-field onyria-compendium-pack" data-pack="onyria.professions" data-open="0">
            {{/if}}
            {{#if (isOnyriaTypeSetting "stars")}}
                <div class="flex4 center cell drop-field onyria-compendium-pack" data-pack="onyria.professionsstars" data-open="0">
            {{/if}}
            {{#if (isOnyriaTypeSetting "contemporain")}}
                <div class="flex4 center cell drop-field onyria-compendium-pack" data-pack="onyria.professionscont" data-open="0">
            {{/if}}
                {{#if (getProfession actor.items)}}
                    {{#with (getProfession actor.items)}}
                        <span class="field-value charname"/>{{name}}</span>
                        <div class="profession-controls item" data-item-id="{{_id}}" style="padding-right:5px;">
                            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-times"></i></a>
                        </div>
                    {{/with}}
                {{else}}
                    <div class="empty">Ajoutez une Profession&nbsp; <i class="fas fa-atlas"></i> </div>
                {{/if}}
            </div>
        </div>
        
        {{#if (and (or (isOnyriaTypeSetting "onyria") (isOnyriaTypeSetting "stars")) (isEnabled "showGenialMais"))}}
        <div class="flex1 center">
            <span class="field-label"><br>MAIS LA SOCIETE A DES PROBLEMES <br> AVEC MOI PARCE QUE...</span>
        </div> 
        <div class="flex1 center">
            <input class="field-value" name="system.mais" type="text" value="{{system.mais}}" placeholder="..." data-dtype="String"/>
        </div>
        {{/if}}
    </div>

</div>
