<div class="flexrow top">
    <table>
        <tr>
            <td>
                <div class="sidebar flex1 pos_relative">
                    <div class="attrvertalign">
                        <img class="profession-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="152px"/>
                    </div>
                </div>
            </td>
        
            {{!-- NAME --}}
            <td>
                <div class="flex1">
                        <span class="titleFont titre-general field-label">{{ localize 'ONYRIA.ui.adventurer' }}</span>
                </div>
                <div class="flexrow">
                    <div class="flex2 cell">
                        <input class="field-value charname" name="name" type="text" value="{{actor.name}}" placeholder="Name" data-dtype="String"/>
                    </div>
                </div>
            </td>
                
            <td>
                <!-- DETAILS -->
                <div class="flexrow">
                    {{!-- CLASS --}}
                    <div class="flecol">
                        <h3>Classe</h3>
                        <div class="flex4 cell drop-field onyria-compendium-pack" data-pack="onyria.professions" data-open="0">
                            {{#if (getProfession actor.items)}}
                                {{#with (getProfession actor.items)}}
                                    <span class="field-value charname"/>{{name}}</span>
                                    <div class="profession-controls item" data-item-id="{{_id}}" style="padding-right:5px;">
                                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-times"></i></a>
                                    </div>
                                {{/with}}
                            {{else}}
                                <div class="empty">Ajoutez une Profession&nbsp; <i class="fas fa-atlas"></i> </div>
                            {{/if}}
                        </div>
                    </div>
                    {{!-- ORIGINE --}}
                    <div class="flex1">
                        <h3>Origine</h3>
                        <div class="flex4 cell drop-field onyria-compendium-pack" data-pack="onyria.origines" data-open="0">
                            {{#if (getOrigines actor.items)}}
                                {{#with (getOrigines actor.items)}}
                                    <span class="field-value charname"/>{{name}}</span>
                                    <div class="profession-controls item" data-item-id="{{_id}}" style="padding-right:5px;">
                                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-times"></i></a>
                                    </div>
                                {{/with}}
                            {{else}}
                                <div class="empty">Ajoutez une Origine&nbsp; <i class="fas fa-atlas"></i> </div>
                            {{/if}}
                        </div>
                    </div>
                    {{!-- DIVINITE --}}
                    <div class="flex1">
                        <h3>Divinit√©</h3>
                        <div class="flex4 cell">
                            <input class="field-value charname" name="system.attributes.god" type="text" value="{{system.attributes.god}}" placeholder="{{localize "ONYRIA.details.god"}}" data-dtype="String"/>
                        </div>
                    </div>
                </div>
            </td>            
        </tr>
        <tr>
            <td>Niveau</td>
            <td><input class="field-value charname" name="system.attributes.level" type="text" value="{{system.attributes.level}}" placeholder="Niveau" data-dtype="Number"/></td>
        </tr>
    </table>

</div>
