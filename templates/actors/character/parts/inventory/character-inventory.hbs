{{#if (isEnabled "showBourse")}}
<div class="flexrow no-wrap currencies" style="max-height:20px">
    {{#if (isOnyriaTypeSetting "onyria")}}
     <div class="flex1 center">Bourse</div>
    <div class="flex1 center coin">
        <i title="Pièce d'Or" class="fas fa-coins" style="color:goldenrod"></i>
        <input class="field-value coin-field" name="system.currency.gp.qty" type="number" value="{{system.currency.gp.qty}}" placeholder="Pièce d'Or" data-dtype="Number"/>
    </div>
    <div class="flex1 center coin">
        <i title="Pièce d'Argent" class="fas fa-coins" style="color:silver"></i>
        <input class="field-value center coin-field" name="system.currency.sp.qty" type="number" value="{{system.currency.sp.qty}}" placeholder="Pièce d'Argent" data-dtype="Number"/>
    </div>
    <div class="flex1 center coin">
        <i title="Pièce de Bronze" class="fas fa-coins" style="color:saddlebrown"></i>
        <input class="field-value coin-field" name="system.currency.cp.qty" type="number" value="{{system.currency.cp.qty}}" placeholder="Pièce de Bronze" data-dtype="Number"/>
    </div>
        <div class="flex1 center coin">
        <i title="Pièce de Fer" class="fas fa-coins" style="color:dimgray"></i>
        <input class="field-value coin-field" name="system.currency.fp.qty" type="number" value="{{system.currency.fp.qty}}" placeholder="Pièce de Fer" data-dtype="Number"/>
    </div>

    {{else}}

    <div class="flex4 center"> </div>
    <div class="flex4 center"> </div>
    {{#if (isOnyriaTypeSetting "stars")}}
    <div class="flex1 center">Crédits</div>
    {{/if}}
    {{#if (isOnyriaTypeSetting "contemporain")}}
    <div class="flex1 center">Francs</div>
    {{/if}} 
    
    <div class="flex2 center coin">
         <input class="field-value coin-field" name="system.currency.fp.qty" type="number" value="{{system.currency.fp.qty}}" placeholder="0" data-dtype="Number"/>
        <i title="Credits" class="fas fa-coins" style="color:dimgray"></i>
    </div>
    {{/if}} 
</div>
{{/if}}

    <ol class="inventory-list">
        <li class="inventory-header flexrow">
            <div class="item-name flexrow"></div>
            <div class="item-detail">Qté</div>
            <div class="item-detail">Equiper</div>
             {{!-- <div class="item-detail">Roll</div>--}}
            <div class="item-controls">
            {{#if (isGM)}}
                <a class="item-control item-create new-item" title="Ajouter un objet"><i class="fas fa-plus"></i></a>
            {{/if}}
            {{#if (isOnyriaTypeSetting "onyria")}}
                <a class="item-control item-create onyria-compendium-pack" data-pack="onyria.arme" data-open="0" title="Ajouter un objet">
            {{/if}}
            {{#if (isGM)}}
                    <i class="fas fa-folder-plus"></i>
            {{/if}}
                </a>
            </div>
        </li>
        {{#if (notEmpty (getInventory actor.items))}}
        
        {{#each (getArraySubCategorywithItems actor.items)}}
                {{#if (notEmpty this.items)}}
                    <li class="inventory-header flexrow"><div class="item-name center flexrow">{{this.value}}</div></li>
                {{#each this.items}}
                        {{> "systems/onyria/templates/actors/character/parts/inventory/character-inventory-item.hbs" this}}
                    {{/each}}
                {{/if}}
        {{/each}}

     

        {{else}}
            <p>Votre inventaire est vide.</p>
        {{/if}}
    </ol>

