<div class="flexrow no-wrap carac_row">
    <div class="caracname">
            <div class="flex1 rollable no-wrap" data-rolling="{{ localize system.stats.distance.label }}" data-roll-type="skillcheck" data-rolling-value="{{system.stats.distance.base}}">
                <div class="flexrow no-wrap  carac_label">
                    <div class="icon_d100" title="{{ localize system.stats.distance.label }}">
                    </div>
                    <div class="field-label no-wrap left" title="{{ localize system.stats.distance.label }}">
                        {{ localize system.stats.distance.label }}
                    </div>
                </div>
            </div>
    </div>
    <div class="flex1 center cell caracvalue">
        <input class="field-value" name="system.stats.distance.base" type="text" value="{{system.stats.distance.base}}" data-dtype="Number"/>
        {{#if (isEnabled "carac100")}}
        <div class="flex1 capa_percent"></div>
        {{/if}} 
    </div>
</div>
